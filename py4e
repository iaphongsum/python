# best friends - string and list

abc = "with three words"
stuff = abs.split()
print(stuff)
print(len(stuff))
print(stuff[0])
for w in stuff:
    print(w)
line = "a lot of       space"
etc = line.split()
print(etc)
line = "a;lot;of;space"
thing = line.split()
print(thing)
thing = line.split(;)
print(thing)
thing = line.split(';')
print(thing)

# take out spaces in strings

fhand = open ('mbox-short.txt')
for line in fhand:
    line = line.rstrip()
    if not line.startswith('From'): continue
    words = line.split()
    print(words[2])
    
# the double split pattern

line = "From zqian@umich.edu Fri Jan  4 16:10:39 2008"
words = line.split()
email = words[1]
pieces = email.split('@')
print(pieces)


    
